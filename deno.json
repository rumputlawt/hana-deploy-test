{
	"tasks": {
		"check": "deno fmt --check && deno lint && deno check **/*.ts && deno check **/*.tsx",
		"dev": "deno run -A --env --watch=static/,routes/ dev.ts",
		"build": "deno run -A dev.ts build",
		"start": "deno run -A --env main.ts",
		"update": "deno run -A -r jsr:@fresh/update ."
	},
	"lint": {
		"rules": {
			"tags": [
				"fresh",
				"recommended"
			]
		}
	},
	"fmt": {
		"indentWidth": 4,
		"useTabs": true
	},
	"exclude": [
		"**/_fresh/*"
	],
	"imports": {
		"@discordjs/core": "npm:@discordjs/core@^2.0.0/http-only",
		"@std/encoding": "jsr:@std/encoding@^1.0.6",
		"@std/http": "jsr:@std/http@^1.0.12",
		"tweetnacl": "npm:tweetnacl@^1.0.3",
		"~/": "./",
		"fresh": "jsr:@fresh/core@^2.0.0-alpha.27",
		"@fresh/plugin-tailwind": "jsr:@fresh/plugin-tailwind@^0.0.1-alpha.7",
		"preact": "npm:preact@^10.25.2",
		"@preact/signals": "npm:@preact/signals@^1.3.1",
		"tailwindcss": "npm:tailwindcss@^3.4.3"
	},
	"compilerOptions": {
		"lib": [
			"dom",
			"dom.asynciterable",
			"dom.iterable",
			"deno.ns"
		],
		"jsx": "precompile",
		"jsxImportSource": "preact",
		"jsxPrecompileSkipElements": [
			"a",
			"img",
			"source",
			"body",
			"html",
			"head"
		]
	}
}
